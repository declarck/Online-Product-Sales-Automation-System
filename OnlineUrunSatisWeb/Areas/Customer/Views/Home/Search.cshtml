@model IEnumerable<OnlineUrunSatisWeb.Models.Product>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @await Component.InvokeAsync("CategoryList")
        @if (Model.Count() > 0)
        {
            <div class="col-md-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4" style="margin-bottom: 1rem">
                            <div class="card">
                                <div class="card-header">
                                    @item.Brand
                                    @item.Model
                                </div>
                                <div style="min-height: 16rem">
                                    <img src="@item.Image" class="card-img-top">
                                </div>

                                <div class="card-body">
                                    <p class="card-text" style="display: block; display: -webkit-box; height: 3.9em;  line-height: 1.3em; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis">@item.Description</p>
                                </div>
                                <div class="card-footer">
                                    <label style="font-size: 20px; color: #0093d9">
                                        <b>
                                            ₺ @item.Sale.ToString("0.00")
                                        </b>
                                    </label>
                                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-info" style="float:right">Detay</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="col-md-9">
                <div class="row">
                    Aramanızla eşleşen herhangi bir ürün bulunmamaktadır.
                </div>
            </div>
        }
    </div>
</div>

